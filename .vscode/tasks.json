{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        {
          "owner": "typescript",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}\\s+(?:AM|PM)?\\s+\\[watch\\] build started",
            "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}\\s+(?:AM|PM)?\\s+\\[watch\\] build finished"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watch"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
